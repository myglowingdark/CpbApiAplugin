{
  "_readme": {
    "title": "CPB College Import Templates",
    "description": "Use these templates with the CPB CPT API Sync plugin to import colleges via Playwright",
    "endpoint": "/wp-json/cpb/v1/sync/import",
    "method": "POST",
    "authentication": "Basic Auth with Application Password"
  },
  "college_minimal": {
    "description": "Minimal college import with only required fields",
    "example": {
      "items": [
        {
          "post_type": "college",
          "slug": "abc-college",
          "title": "ABC College",
          "content": "<p>Full description of the college...</p>",
          "status": "publish",
          "meta": {
            "_college_website_url": "https://abc.edu",
            "_college_location": "Mumbai",
            "_college_state": "Maharashtra",
            "_college_country": "India"
          }
        }
      ]
    }
  },
  "college_complete": {
    "description": "Complete college import with all available fields",
    "example": {
      "items": [
        {
          "post_type": "college",
          "slug": "abc-college",
          "title": "ABC College",
          "content": "<p>Full college description with history, vision, mission...</p>",
          "excerpt": "A premier institution offering quality education since 1998",
          "status": "publish",
          "featured_media_url": "https://example.com/hero-image.jpg",
          "media": {
            "_college_logo": {
              "url": "https://example.com/logo.png"
            },
            "_college_gallery": [
              {
                "url": "https://example.com/gallery-1.jpg"
              },
              {
                "url": "https://example.com/gallery-2.jpg"
              }
            ]
          },
          "meta": {
            "_college_website_url": "https://abc.edu",
            "_college_established_year": 1998,
            "_college_location": "Mumbai",
            "_college_pincode": "400001",
            "_college_state": "Maharashtra",
            "_college_country": "India",
            "_college_address_line": "123 Main Street, Andheri West",
            "_college_fee_min": "100000",
            "_college_fee_max": "250000",
            "_college_fees_info": "<h3>Fee Structure</h3><ul><li>Tuition: ₹1,50,000 per year</li><li>Hostel: ₹50,000 per year</li></ul>",
            "_college_admission_info": "<h3>Admission Process</h3><p>Applications open in May. Entrance exam in June...</p>",
            "_college_placement_info": "<h3>Placement Statistics</h3><p>Average package: ₹6 LPA. Top recruiters include...</p>",
            "_college_facility_description": "<p>Our campus is equipped with state-of-the-art facilities...</p>",
            "_college_facility_boys_hostel": "<p>Separate boys hostel with 500 rooms...</p>",
            "_college_facility_girls_hostel": "<p>Girls hostel with modern amenities...</p>",
            "_college_facility_library": "<p>Central library with 50,000+ books...</p>",
            "_college_facility_sports": "<p>Sports complex with cricket ground, basketball court...</p>",
            "_college_facility_cafeteria": "<p>Multi-cuisine cafeteria serving hygienic food...</p>",
            "_college_facility_laboratories": "<p>Well-equipped labs for all departments...</p>",
            "_college_is_university": "1",
            "_college_university_departments": [
              {
                "name": "College of Engineering",
                "ownership": "Private",
                "courses": 15
              },
              {
                "name": "College of Arts & Science",
                "ownership": "Government",
                "courses": 8
              }
            ]
          },
          "terms": {
            "college_stream": [
              "engineering",
              "medical",
              "management"
            ]
          },
          "relations": {
            "linked_courses": [
              {
                "slug": "btech-computer-science",
                "title": "B.Tech Computer Science",
                "status": "publish"
              },
              {
                "slug": "mba",
                "title": "MBA",
                "status": "publish"
              }
            ]
          },
          "relations_create_missing": true
        }
      ]
    }
  },
