  "field_reference": {
    "basic_info": {
      "_college_website_url": "string - Official website URL",
      "_college_established_year": "integer - Year college was founded"
    },
    "location": {
      "_college_location": "string - City/District name",
      "_college_pincode": "string - Postal/ZIP code",
      "_college_state": "string - State/Province",
      "_college_country": "string - Country name",
      "_college_address_line": "string - Street address, landmarks"
    },
    "fees": {
      "_college_fee_min": "string - Minimum annual fee in rupees",
      "_college_fee_max": "string - Maximum annual fee in rupees",
      "_college_fees_info": "HTML string - Detailed fee structure"
    },
    "additional_info": {
      "_college_admission_info": "HTML string - Admission process, eligibility, dates",
      "_college_placement_info": "HTML string - Placement statistics, recruiters"
    },
    "facilities": {
      "_college_facility_description": "HTML string - General facilities overview",
      "_college_facility_boys_hostel": "HTML string",
      "_college_facility_girls_hostel": "HTML string",
      "_college_facility_medical_hospital": "HTML string",
      "_college_facility_gym": "HTML string",
      "_college_facility_library": "HTML string",
      "_college_facility_sports": "HTML string",
      "_college_facility_it_infrastructure": "HTML string",
      "_college_facility_cafeteria": "HTML string",
      "_college_facility_auditorium": "HTML string",
      "_college_facility_transport_facility": "HTML string",
      "_college_facility_alumni_associations": "HTML string",
      "_college_facility_wifi": "HTML string",
      "_college_facility_laboratories": "HTML string",
      "_college_facility_guest_room": "HTML string",
      "_college_facility_training_placement_cell": "HTML string"
    },
    "university": {
      "_college_is_university": "string - '1' if university, empty otherwise",
      "_college_university_departments": "array of objects - [{name, ownership, courses}]"
    },
    "media": {
      "featured_media_url": "string - Main hero/banner image URL",
      "_college_logo": "object in media - {url: string} or {id: integer}",
      "_college_gallery": "array in media - [{url: string}] or [{id: integer}]"
    },
    "relations": {
      "linked_courses": "array - Course slugs or objects [{slug, title, status}]"
    },
    "taxonomy": {
      "college_stream": "array of strings - Stream tags like 'engineering', 'medical'"
    }
  }
}
